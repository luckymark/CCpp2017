encrypt:
#include<iostream>
#include<cstring>
using namespace std;
int main()
{
    string a;
    char b;
    getline(cin,a);
    for(int i=0;i<a.length();i++)
    {
        b=(int)a[i]+4;
        cout<<b;
    }
    cout<<endl;
    return 0;
}

decrypt:
#include<iostream>
#include<cstring>
using namespace std;
int main()
{
    string a;
    char b;
    getline(cin,a);
    for(int i=0;i<a.length();i++)
    {
        b=(int)a[i]-4;
        cout<<b;
    }
    cout<<endl;
    return 0;
}
