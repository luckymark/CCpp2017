#include<iostream>
#include<cstring>
using namespace std;
int main()
{
    cout<<"Press 1 for encrypt, 2 for decrypt."<<endl;
    int c;
    cin>>c;
    cin.get();
    cout<<"Enter your sentences.";
    string a;
    char b;
    getline(cin,a);
    for(int i=0;i<a.length();i++)
    {
        if(c==1)
        {
            b=(int)a[i]+4;
        }
        else
        {
            b=(int)a[i]-4;
        }
        cout<<b;
    }
    cout<<endl;
    return 0;
}
